<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/appBlue</item>
        <item name="colorPrimaryDark">@color/appBlueDark</item>
        <item name="colorAccent">@color/appWhite</item>
    </style>

    <style name="LauncherActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/bg_launcher</item>
        <item name="colorPrimary">@color/appBlue</item>
        <item name="colorPrimaryDark">@color/appBlueDark</item>
        <item name="colorAccent">@color/appWhite</item>
    </style>

</resources>
